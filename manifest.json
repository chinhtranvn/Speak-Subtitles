{
  "manifest_version": 3,
  "name": "YouTube Subtitle Reader",
  "description": "Read YouTube subtitles with Google Cloud Text-to-Speech",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "data:image/svg+xml;base64,"
    }
  },
  "permissions": ["storage", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "data:image/svg+xml;base64,"
  }
}
